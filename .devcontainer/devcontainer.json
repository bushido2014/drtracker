{
  "name": "Drupal 11 Development",
  "image": "mcr.microsoft.com/devcontainers/php:8.3-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  
  "postCreateCommand": "curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer && composer install",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "xdebug.php-debug"
      ]
    }
  },
  
  "remoteUser": "vscode"
}