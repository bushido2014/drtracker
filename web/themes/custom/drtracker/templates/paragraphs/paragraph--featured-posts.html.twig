<section class="featured-post bg-gray">
  <div class="container">

<div class="section-title">
 <h2 class="heading-title">{{paragraph.field_title.value}}</h2>
 <div class="description">
      {{paragraph.field_description.value| raw}}
    </div>
</div>


<div class="tags-wrapp">
{{content.field_blog_tags}}
</div>


<div class="featured-posts d-grid">
{#   {{content.field_featured_article}} #}





{% for item in paragraph.field_featured_article %}
  {% if item.entity %}
    {% set article = item.entity %}
  
    <a href="{{ path('entity.node.canonical', {'node': article.id()}) }}" class="feature-card">
      {% if article.field_image.entity %}
        {% set image = article.field_image.entity %}
        {% if image.field_media_image.entity %}
          <div class="feature-card__image">
            <img
              src="{{ file_url(image.field_media_image.entity.uri.value) }}"
              alt="{{ image.field_media_image.alt }}"
              loading="lazy"
            />
          </div>
        {% endif %}
      {% endif %}
      
      <h5 class="feature-card__title">{{ article.label }}</h5>
      <div class="feature-link__icon">
        <i class="fa-solid fa-up-right-from-square"></i>
      </div>
    </a>
  {% endif %}
{% endfor %}





</div>



 </div>
</section>
