<section class="hero-feature bg-gray">
<div class="container">

<div class="hero-feature-wrapp d-grid cols-2">

<div class="feature-item content">
{{ content.field_before_title }}
<div class="wrapp-title"><h2 class="heading-title">{{paragraph.field_title.value}}</h2></div>
 {{ paragraph.field_description.value|raw }}

</div>
<div class="feature-item connection-img">
{% if paragraph.field_image.entity %}
            {% set media = paragraph.field_image.entity %}
            {% if media.field_media_image.entity %}
           <img src="{{ file_url(media.field_media_image.entity.uri.value) }}" alt="{{ media.field_media_image.alt }}" />
          {% endif %}
          {% endif %} 
</div>

</div>
</div>
</section>
