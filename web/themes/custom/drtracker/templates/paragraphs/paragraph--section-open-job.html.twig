<section class="career-job bg-gray">
  <div class="container">

<div class="section-title">
 <h2 class="heading-title">{{paragraph.field_title.value}}</h2>
</div>



    <div class="job-cards">
      {% for item in paragraph.field_open_jobs %}
        {% set job = item.entity %}
        {% if job %}
        
          <div class="card-job d-grid cols-3">
            <div class="card-title">
              {% if job.field_job_time.value %}
                <span class="job-time">{{ job.field_job_time.value }}</span>
              {% endif %}
              <h4>{{ job.title.value }}</h4>
              {% if job.field_job_vacancy.value %}
                <span class="job-vacancy">{{ job.field_job_vacancy.value }}</span>
              {% endif %}
            </div>

            <div class="card-content">
              <ul class="card-list">
              {% if job.field_job_salary.value %}
                <li><strong>Salary:</strong> {{ job.field_job_salary.value }}</li>
              {% endif %}
              {% if job.field_job_experience.value %}
                <li><strong>Experience:</strong> {{ job.field_job_experience.value }}</li>
              {% endif %}
              {% if job.field_job_education.value %}
                <li><strong>Education:</strong> {{ job.field_job_education.value }}</li>
              {% endif %}
             </ul>
            </div>

            <div class="card-btn">
              {% if job.field_job_cta_link.uri %}
                <a href="{{ job.field_job_cta_link.uri }}" class="btn btn-primary">
                  {{ job.field_job_cta_link.title }} â†’
                </a>
              {% endif %}
            </div>
          </div>
         
        {% endif %}
      {% endfor %}
    </div>
 


 </div>
</section>
