
<section class="career bg-gray">
  <div class="container">
    <div class="section-title">
      <h2 class="heading-title">{{ paragraph.field_title.value }}</h2>
      <div class="description">
        {{ paragraph.field_description.value }}
      </div>
    </div>

    <div class="career-images d-grid">
  {% for media in paragraph.field_images %}
    {% set file = media.entity.field_media_image.entity %}
    <div class="career-item" data-index="{{ loop.index }}" style="background-image: url({{ file_url(file.uri.value) }})"></div>
  {% endfor %}
</div>



  </div>
</section>
