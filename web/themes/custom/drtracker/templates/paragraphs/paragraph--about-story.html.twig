<section class="about-story">
   <div class="container">
     <div class="story-wrapp d-grid cols-2">

      <div class="story-item">
       {{ content.field_before_title }}
        {{ paragraph.field_about_story_text.value|raw }}
       <div class="story-images d-flex">
          <div class="story-img-sm">
             {% if paragraph.field_image_left.entity %}
            {% set media = paragraph.field_image_left.entity %}
            {% if media.field_media_image.entity %}
           <img src="{{ file_url(media.field_media_image.entity.uri.value) }}" alt="{{ media.field_media_image.alt }}" />
          {% endif %}
          {% endif %} 
           </div>
           <div class="story-img-bg">
             {% if paragraph.field_image_right.entity %}
            {% set media = paragraph.field_image_right.entity %}
            {% if media.field_media_image.entity %}
           <img src="{{ file_url(media.field_media_image.entity.uri.value) }}" alt="{{ media.field_media_image.alt }}" />
          {% endif %}
          {% endif %} 
           </div>
        </div>
      </div>
     <div class="story-item">
       {{ paragraph.field_description.value|raw }}
      </div>
 </div>
   </div>
</section>
