<section class="features">
<div class="container">
   <div class="section-title">
      {#<div class="before-title">{{paragraph.field_before_title.value}}</div>#}
      {{content.field_before_title}}
      <div class="title"><h2>{{paragraph.field_title.value}}</h2></div>
   </div>
  
    <div class="features-wrapp-top d-flex">
     <div class="features-item">
      <div class="features-img">

        {% if paragraph.field_image_top_feature_left %} {% set media =
                paragraph.field_image_top_feature_left %} {% if
                media.field_image_top_feature_left.entity %}
                <img
                src="{{ file_url(media.field_media_image.entity.uri.value) }}"
                alt="{{ media.field_media_image.alt }}"
              />
            {% endif %} {% endif %}

      </div>
      <div class="features-content">
         <div class="features-content__title">
         <h4>{{paragraph.field_title_feature_midlle.value}}</h4>
         </div>
       <div class="features-content__text">
       {{paragraph.field_feature_description_middle.value}}
        </div>
         {{content.field_link}}
      </div>
   
     <div class="features-item">
          <div class="features-content-right">
        <div class="features-content__title">
          <h4>{{paragraph.field_title_feature_right.value}}</h4>
        </div>
       <div class="features-content__text">
          {{paragraph.field_feature_description_right.value}}
        </div>
        <div class="feature-image__right">
         {% if paragraph.field_image_top_feature_right %} {% set media =
                paragraph.field_image_top_feature_right %} {% if
                media.field_image_top_feature_right.entity %}
                <img
                src="{{ file_url(media.field_media_image.entity.uri.value) }}"
                alt="{{ media.field_media_image.alt }}"
              />
            {% endif %} {% endif %}
       </div>
      </div>
     </div>
     </div>
    </div>
   <div class="features-wrapp-bottom d-flex">
   </div>
</div>
</section>
