{#
/**
 * @file
 * Card paragraph template
 */
#}
{% set classes = [
  'card',
  'bg-gray',
] %}

<div{{ attributes.addClass(classes) }}>
  
  {# Image 
  {% if content.field_image|render %}
    <div class="card__image">
      {{ content.field_image }}
    </div>
  {% endif %}
  #}
 {% if paragraph.field_image.entity %} {% set media =
                paragraph.field_image.entity %} {% if
                media.field_media_image.entity %}
            <div class="card__image">

                <img
                src="{{ file_url(media.field_media_image.entity.uri.value) }}"
                alt="{{ media.field_media_image.alt }}"
              />

            </div>
            {% endif %} {% endif %}

  {# Title #}
  {% if paragraph.field_title.value %}
    <h5 class="card__title">
      {{ paragraph.field_title.value }}
    </h5>
  {% endif %}
  
  {# Description #}
  {% if paragraph.field_description.value %}
    <div class="card__description">
      {{ paragraph.field_description.value|raw }}
    </div>
  {% endif %}
  
</div>
